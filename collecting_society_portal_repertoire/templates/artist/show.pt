<tal:block metal:use-macro="backend363" i18n:domain="collecting_society_portal_repertoire">

    <!-- content left -->
    <tal:block metal:fill-slot="content-left"></tal:block>

    <!-- content middle -->
    <tal:block metal:fill-slot="content-middle">

        <div class="cs-symbolnavbar">
            <a href="javascript: history.back(1);">
                <span class="glyphicon glyphicon-arrow-left"></span>
            </a>
            <a href="${request.resource_path(context, 'list')}">
                <span class="glyphicon glyphicon-list"></span>
            </a>
        </div>

        <h1>${artist.name}</h1>

        <div class="cs-symbolnavbar">
            <a href="${request.resource_path(context, 'edit', artist.code)}">
                <span class="glyphicon glyphicon-pencil"></span>
            </a>
            <a href="${request.resource_path(context, 'delete', artist.code)}">
                <span class="glyphicon glyphicon-remove text-danger"></span>
            </a>
        </div>

        <img tal:condition="artist.picture_data"
             tal:define="pic h.b64encode(artist.picture_data) | None"
             class="cs-artist-img clearfix center-block"
             src="data:${artist.picture_data_mime_type};base64,${pic}" />

        <div class="cs-musician-artist">
            <table class="table table-hover">

                <tr>
                    <th i18n:translate="">ID</th>
                    <td>${artist.code}</td>
                </tr>

                <tr>
                    <th i18n:translate="">Name</th>
                    <td>${artist.name}</td>
                </tr>

                <tr>
                    <th i18n:translate="">Description</th>
                    <td>${artist.description}</td>
                </tr>

                <tr>
                    <th i18n:translate="">Group</th>
                    <td>
                        <tal i18n:translate="" tal:condition="artist.group">Yes</tal>
                        <tal i18n:translate="" tal:condition="not artist.group">No</tal>
                    </td>
                </tr>

                <tr tal:condition="artist.group">
                    <th i18n:translate="">Solo Artists</th>
                    <td>
                        <div class="list-group">
                            <a tal:repeat="solo_artist artist.solo_artists"
                               tal:attributes="href request.resource_path(context, 'show', solo_artist.code)"
                               class="list-group-item">
                                ${solo_artist.name}
                            </a>
                            <a href="${request.resource_path(context, 'addmember', artist.code)}">
                                <span class="glyphicon glyphicon-plus"></span> <span i18n:translate="">Add</span>
                            </a>
                        </div>
                    </td>
                </tr>

                <tr tal:condition="not artist.group">
                    <th i18n:translate="">Group Artists</th>
                    <td>
                        <div class="list-group">
                            <a tal:repeat="group_artist artist.group_artists"
                               tal:attributes="href request.resource_path(context, 'show', group_artist.code)"
                               class="list-group-item">
                                ${group_artist.name}
                            </a>
                        </div>
                    </td>
                </tr>

                <tr tal:condition="creations">
                    <th i18n:translate="">Creations</th>
                    <td>${len(creations)}</td>
                </tr>

                <tr tal:condition="contributions">
                    <th i18n:translate="">Contributions</th>
                    <td>${len(contributions)}</td>
                </tr>

            </table>
        </div>

    </tal:block>

    <!-- content right -->
    <tal:block metal:fill-slot="content-right"></tal:block>

</tal:block>