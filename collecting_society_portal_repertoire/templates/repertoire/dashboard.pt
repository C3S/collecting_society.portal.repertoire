<tal:block metal:use-macro="backend363" i18n:domain="collecting_society_portal_repertoire">

    <tal:block metal:fill-slot="content-middle">
        <div class="container">
            <div style="float: left; margin:15px">
                <img style="height:150px" src="../../static/repertoire/img/avatar_example.png" />
            </div>
	    <div class="introtext" style="float:left; margin:15px">
            <span i18n:translate="">Welcome</span>
		    &nbsp;${webuser.nickname or ""},<br/>
		    <span i18n:translate="">you can find the latest news and todos for your next steps here on this dashboard.</span>
	    </div>
            <tal:block tal:condition="context.registry['widgets']['dashboard-central-widgets']|None"
                       tal:repeat="widget context.registry['widgets']['dashboard-central-widgets']">
                <div class="dashboard-widget" style="float:left">
                    ${structure: widget.output()}
                </div>
            </tal:block>

        </div>
    </tal:block>

</tal:block>
